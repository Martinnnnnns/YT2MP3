{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "YT2MP3",
  "version": "1.0.0",
  "identifier": "com.yt2mp3.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "YT2MP3",
        "width": 900,
        "height": 800,
        "minWidth": 600,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../server/**/*",
      "../node_modules/express/**/*",
      "../node_modules/uuid/**/*"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  }
}
